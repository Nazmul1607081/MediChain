    <div class="signin">
        <form action="/checklogin" method="POST">
            <h2 style="color: white">Log In</h2>
            <!--<label>UserID</label>-->
            <input type="text" name="uid" placeholder="User ID" />
            <input type="password" name="password" placeholder="Password" /><br /><br />
            <label class="label">Login as :</label>
            <input type="radio" name="utype" id="doctors" value="doctors" checked>
            <label for="doctors">Doctor</label>
            <input type="radio" name="utype" id="patients" value="patients">
            <label for="patients">Patient</label></br>
            <input type="submit" value="LOGIN"><br><br>
        </form>
        <label class="label2">No Account?</label>
        <form action="/doctorsignup">
            <input type="submit" value="Signup as a Doctor"  />
        </form>
        <form action="/patientsignup">
            <input type="submit" value="Signup as a Patient" />
        </form>
    </div>
</body>

</html>
